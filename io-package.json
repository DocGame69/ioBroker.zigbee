                "read":  true,
                "write": false,
                "def":   false
            },
            "native": {}
        },
        {
            "_id":  "info.pairingMode",
            "type": "state",
            "common": {
                "name":  "Pairing mode",
                "type":  "boolean",
                "read":  true,
                "write": false,
                "def":   false
            },
            "native": {}
        },
        {
            "_id":  "info.pairingCountdown",
            "type": "state",
            "common": {
                "name":  "Pairing countdown",
                "type":  "number",
                "read":  true,
                "write": false,
                "def":   0
            },
            "native": {}
        },
        {
            "_id":  "info.pairingMessage",
            "type": "state",
            "common": {
                "name":  "Pairing message",
                "type":  "string",
                "read":  true,
                "write": false,
